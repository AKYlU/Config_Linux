usuario ALL=(ALL) NOPASSWD: ALL

install p7zip-full playerctl steam firefox sway flathub gnome-boxes gamemode
install -t pattern devel_basis java-17-openjdk-devel libopenssl-devel ctags ncurses-devel silversearcher-ag fontconfig ImageMagick ImageMagick-devel software-properties-common git curl

sudo rm -r /etc/<nome_do_pacote>
