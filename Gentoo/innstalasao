# ver o Disco
lsblk
cfdisk /dev/nvme0n1 

# formato 
mkfs.vfat -F32 /dev/nvme0n1p1
mkfs.vfat -F32 /dev/nvme0n1p2
mkfs.btrfs /dev/nvme0n1p3

# cria arquivo
mkdir -p /mnt/gentoo/
mount /dev/nvme0n1p3 /mnt/gentoo
mkdir -p /mnt/gentoo/efi
mount /dev/nvme0n1p1 /mnt/gentoo/efi

chronyd -q

# ir para o diretório
cd /mnt/gentoo

# abaixar o linux
wget https://distfiles.gentoo.org/releases/amd64/autobuilds/current-stage3-amd64-openrc/stage3-amd64-openrc-XXXXXXXXXXXXXXX.tar.xz

# extrai o arquivo
tar xpvf

cp -L /etc/resolv.conf etc && arch-chroot .

# atualizar o sistema
emerge-webrsync 

emerge --ask app-portage/cpuid2cpuflags 

cpuid2cpuflags 

echo "*/* $(cpuid2cpuflags)" > /etc/portage/package.use/00cpu-flags 

# atualizar o grupo
emerge -avuDN @world

# senha de root
passwd

# colocar no grupo
useradd -g users -G wheel,portage,audio,video,usb,cdrom -m akil

# senha do usuário 
passwd akil

ln -sf /usr/share/zoneinfo/Europe/Helsinki /etc/localtime

nano /etc/portage/make.conf
USE="dist-kernel"

# abaixar firmware
mkdir -p /etc/portage/package.license 
echo "sys-kernel/linux-firmware linux-fw-redistributable" >> /etc/portage/package.license/linux-firmware 
emerge --ask sys-kernel/linux-firmware
dispatch-conf

kernel
echo "sys-kernel/installkernel dracut" >> /etc/portage/package.use/installkernel 
emerge --ask sys-kernel/installkernel sys-kernel/gentoo-kernel-bin

# inicializar o boot com efi
emerge sys-boot/efibootmgr
mkdir -p /boot/efi/boot 
cp /boot/vmlinuz /boot/efi/boot/bootx64.efi
# efibootmgr -c -d /dev/nvme0n1p -p 1 -L "Gentoo" -L "\efi\boot\bootx64.efi

echo "sys-kernel/installkernel dracut" >> /etc/portage/package.use/installkernel 
emerge --ask sys-kernel/installkernel sys-kernel/gentoo-kernel-bin

# net
rc-update add dhcpcd default
rc-service dhcpcd start

nano /etc/portage/package.use/sysklogd
emerge --ask app-admin/sysklogd 
rc-update add sysklogd default 
rc-update add cronie default

exit 
reboot

etc-update

cd /usr/src/
wget kernel

emerge --ask sys-devel/llvm sys-devel/clang

export CC=clang
export LD=ld.lld
export AR=llvm-ar
export NM=llvm-nm
export OBJCOPY=llvm-objcopy
export OBJDUMP=llvm-objdump
export STRIP=llvm-strip

