# emege app-emulation/spice-protocol
echo "app-emulation/qemu -spice" >> /etc/portage/package.use/qemu
emerge -1 app-emulation/qemu

# remova a flag -spice
sed -i '/app-emulation\/qemu -spice/d' /etc/portage/package.use/qemu
emerge -1 app-emulation/qemu

